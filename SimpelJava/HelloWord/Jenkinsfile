pipeline {
    agent any
    tools {maven 'maventool'}
    stages {
        stage('Build') {
            steps {
                script {
                    sh 'mvn clean package'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    sh 'mvn test'
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    sh 'sudo docker build -t helloworld .'
                    // sh 'docker run -p 8080:8080 helloworld'
                }
            }
        }
    }
}
